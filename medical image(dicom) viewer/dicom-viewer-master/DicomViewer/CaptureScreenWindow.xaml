<Window x:Class="DicomViewer.CaptureScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DicomViewer"
        mc:Ignorable="d"
        Title="CaptureScreenWindow" Height="450" Width="800" AllowsTransparency="True" WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized" Cursor="None">
    <Grid>

        <Image x:Name="imgScreenShot" Margin="0" Stretch="None" Cursor="Cross"/>

        <Canvas x:Name="MyCanvas"/>
    </Grid>
</Window>
